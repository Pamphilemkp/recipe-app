
<%= form_with model: @food , url: foods_path do |form| %>
<div class="container">
    <h1> Food Form</h1>
   <div class="row">
       <div class="col-25">
            <%=form.label :name%>
       </div>
        <div class="col-75">
             <%=form.text_field :name%>
        </div>
    </div>

    <div class="row">
        <div class="col-25">
           <%=form.label :measurement_unit%>
        </div>
       <div class="col-75">
        <%=form.text_field :measurement_unit%>
        </div>
      </div>


     <div class="row">
        <div class="col-25">
             <%= form.label :price %>
        </div>
       <div class="col-75">
             <%= form.number_field :price %>
        </div>
    </div>
 <div class="row">
    <%= form.submit %>
    </div>
</div>
<%end%>